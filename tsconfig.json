{
  "compilerOptions": {
    "outDir": "dist",
    "module": "UMD",
    "target": "ES5",
    "declarationDir": "types",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__fixtures__"
  ]
}
